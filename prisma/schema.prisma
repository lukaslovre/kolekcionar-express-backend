generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../database.db"
}

model Kategorije {
  id       String   @id @default(uuid())
  nazivId  String   
  parentId String?
  drzavaId String?
  isDead   Boolean  @default(false)
  opis     String?
  count    Int      @default(0)
  @@index([parentId], name: "parentId")
  // Does SQLite automatically create an index for the primary key? A: Yes
}

